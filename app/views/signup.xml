		<Button id="btnSubmit" class="getRippedBtn" verticalAlign="center" title="SignUp" onClick="signupUser"></Button>
		</View>
		<!--View id="view5" height="SIZE" top="20">
		<Button id="btnUser" title="Already a user? Sign in here." onClick="openLogin"></Button>
		</View-->
