		<View id="view1" height="100%" width="100%">
			<ImageView image="img1.png"></ImageView>
		</View>
		<View id="view2" height="100%" width="100%" >
			<ImageView image="img2.png"></ImageView>
		</View>
		<View id="view3"  height="100%" width="100%">
