<Alloy>
	<NavigationWindow id="navGroupWin">
	<Window id="signupWin" backgroundColor= "#F1F1F1" title="SwoleTrain">
		<ScrollView id="mainView" layout="vertical" scrollingEnabled="true" showVerticalScrollIndicator="true">
			<View id = "topView">
				<Label id="label" class="getRippedText" top="10">Ready to get swole? </Label>
				<Label class="getRippedText" bottom="10">Give us some info.</Label>
			</View>
		<View id="view1">
			<TextField id="txtFirstName" class="txtFieldLogin"  hintText="First Name"></TextField>
			<TextField id="txtLastName" class="txtFieldLogin" top="10" hintText="Last Name"></TextField>
			<TextField id="txtEmail" class="txtFieldLogin" top="10" hintText="Email" autocapitalization="false"></TextField>
			<TextField id="txtPassword" class="txtFieldLogin" top="10" passwordMask="true"  hintText="Password"></TextField>
		</View>
		<View id="view4">
		<Button id="btnSubmit" top="20" class="getRippedBtn" verticalAlign="center" title="Get Swole" onClick="signupUser"></Button>
		</View>
		<MaskedImage id="maskImg" mask="loading-icon.png" height="30" width="30" visible="false"></MaskedImage>
		</ScrollView>
	</Window>
	 </NavigationWindow>
</Alloy>