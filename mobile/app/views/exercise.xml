<Alloy>
	<NavigationWindow id="exNavWin">
	<Window id="exWin" backgroundColor="#F6F6F6">
		<ScrollView id="scrollviewId" scrollingEnabled="true" showVerticalScrollIndicator="true">
			
		<View id="mainView" layout="vertical">
			<View id="viewId" layout="vertical" height="45%" bottom="10">
				<View id = "topView">
				<Label id="workoutTitle" class="showExCount"> </Label>
				<Label id="eName"></Label>
				</View>
				<ImageView id="exImage"  top="10" height="260px" width="260px" onClick="openExDetails"></ImageView>		
			</View>			
			<View id="bottomView">
			<View id="viewId2">
				<Label id="weightLabel" class="staticLabel" left="10%"></Label>
				<TextField id="txtWeight" class="txtClass" left="10%" color="red" visible="false" maxLength="3"></TextField>
			</View>
			<View id="viewId3" class="innerview" top="10">
				<Label left="40" class="showExCount">Set</Label><Label left="20" class="showExCount">Recommended</Label><Label class="showExCount" left="40">Reps</Label>
			</View>
			<View id="viewId4" class="innerview">
				<Label left="35%" class="showExCount">Reps</Label><Label class="showExCount" left="50">Completed</Label>
			</View>
			<View id="viewId5" class="innerview" top="2">
				<Label left="45" class="staticLabel">1</Label>
				<Label class="txtClass" left="14%" text="12"></Label>
				<TextField id="txtSet1" class="txtClass" left="15%" color="red" maxLength="2"></TextField>
			</View>
			<View id="viewId6" class="innerview" top="3">
				<Label left="45" class="staticLabel">2</Label>
				<Label class="txtClass" left="14%" text="12"></Label>
				<TextField  id="txtSet2" class="txtClass" left="15%" color="red" maxLength="2"></TextField>
			</View>
			<View id="viewId7" class="innerview" top="3">
				<Label left="45" class="staticLabel">3</Label>
				<Label class="txtClass" left="14%" text="12"></Label>
				<TextField id="txtSet3" class="txtClass" left="15%" color="red" maxLength="2"></TextField>
			</View>
			<View id="buttonView" class="innerview" top="12">
				<Button id="btnSkip" left="30" width = "110" title="Jump to Next" onClick="skipExercise"></Button>
				<Button id="btnNext" left="40" title="Save & Next"  onClick="showNext"></Button>
			</View>
			</View>
		</View>
		<MaskedImage id="maskImg" mask="loading-icon.png" height="30" width="30" visible="false"></MaskedImage>
		</ScrollView>
	</Window>
	</NavigationWindow>
</Alloy>