<Alloy>
	<NavigationWindow id="navGroupWin">
	<Window id="changePasswordWin" backgroundColor="#F1F1F1" title="SwoleTrain">
	<ScrollView id="mainView" layout="vertical" scrollingEnabled="true" showVerticalScrollIndicator="true">
		<View id="view1" layout="vertical" top="20%">
			<View id = "topView" layout="vertical" height="SIZE" backgroundColor="#3B74F5" borderWidth="2" borderColor="#F6F6F6">
				<Label id="loginLabel" top="10" bottom="10" height="SIZE">Change Password</Label>
			</View>
		<View id = "middleView" layout="vertical" height="SIZE" backgroundColor="#2B2B2B" borderWidth="2" borderColor="#F6F6F6">
		<TextField id="newPassword" class="txtFieldLogin" top="10"   passwordMask="true"  hintText="Enter New Password"></TextField>
		<TextField id="confirmPassword" class="txtFieldLogin" top="10" bottom="30"  passwordMask="true"  hintText="Re-enter New Password"></TextField>
		</View>
		<View id = "bottomView" layout="vertical" top="30" backgroundColor="#F1F1F1">
		<Button id="btnSubmit" class="changePasswordBtn" title="Change Password" top="20" onClick="changePassword"></Button>
		</View>
		</View>
	</ScrollView>
	</Window>
	 </NavigationWindow>
</Alloy>