<Alloy>
	<NavigationWindow id="dashBoardNavWin" >
	<Window id="dashboardWin" backgroundColor="#F1F1F1">
		<ScrollView id="scrollviewId" scrollingEnabled="true" showVerticalScrollIndicator="true">
		<View id="mainView" layout="vertical">
				<View id="view1">
					<Label id="welcomeLabel"></Label>
				</View>
				<View id="upperBodyView">
					<Label class="workoutName">Upper Body:</Label>
					<Label top = "15" left = "10" class="weightLiftedText" color="F6F6F6"> Average Weight Lifted:</Label>
					<ProgressBar id="pbUpper" top="5" width="250" height="auto" style="Titanium.UI.iPhone.ProgressBarStyle.PLAIN" max="100" color="#FFFFFF"></ProgressBar>
					<View id = "view2">
					<Label id="minUpper" class="progressText" left="40"></Label>
					<Label id="currentUpper" class="progressText" left="10"></Label>
					</View>
					<View id="upperBodyLinks" layout="horizontal" height="SIZE" top="0">
						<Button id="upperWrkout" top="5" left="10" title="Start Workout" onClick="showUpperBodyWorkout"></Button>
						<Button id="UpperBodyExercises" top="5" left="20" title="See all Exercises" onClick="showUpperBodyExercises"></Button>
					</View>
				</View>
				<View id="lowerBodyView">
					<Label class="workoutName">Lower Body:</Label>
					<Label top = "15" left = "10" class="weightLiftedText" color="F6F6F6"> Average Weight Lifted:</Label>
					<ProgressBar id="pbLower" top="5" width="250" height="auto" style="Titanium.UI.iPhone.ProgressBarStyle.PLAIN"  max="100" color="#FFFFFF"></ProgressBar>
					<View layout="horizontal" height="SIZE" top="2">
					<Label id="minLower" class="progressText" left="40"></Label>
					<Label id="currentLower" class="progressText" left="10"></Label>
					</View>
				
					<View id="upperBodyLinks" layout="horizontal" height="SIZE" top="0">
						<Button id="lowerWrkout" top="5" left="10"  title="Start Workout" onClick="showLowerBodyWorkout"></Button>
						<Button id="lowerBodyExercises" top="5" left="20"  title="See all Exercises" onClick="showLowerBodyExercises"></Button>
					</View>
				</View>
				<View id="bottomLinks" layout="vertical" height="SIZE" top="20">
						<Button id ="logoutBtn" title="Logout" class="logoutBtn" onClick="logout"></Button>
				</View>
			</View>		
		</ScrollView>
	</Window>
	</NavigationWindow>
</Alloy>