<Alloy>
	<NavigationWindow id="dashBoardNavWin" >
	<Window id="dashboardWin">
		<ScrollView id="scrollviewId" scrollingEnabled="true" showVerticalScrollIndicator="true">
		<View id="mainView" layout="vertical">
				<!--Button id="btnLogout" left="70%" top="10" title="Logout" onClick="logout"></Button-->
				<View top = "0" layout="vertical"  height="SIZE" backgroundColor="#DE1B1B" borderWidth="3" borderColor="#F6F6F6">
					<Label top="5" bottom="5" id="welcomeLabel" color="#F6F6F6" height="SIZE">Welcome! </Label>
				</View>
				<View id="upperBodyView" layout="vertical" height="SIZE" top="0" class="workoutVkiew" backgroundColor="#2B2B2B" borderWidth="2" borderColor="#F6F6F6">
					<Label top="10" left = "10" class="workoutName" color="F6F6F6">Upper Body:</Label>
					<!--Label top="5" left = "10" id="upperFirstWeight"></Label>
					<Label top="5" left = "10" id="upperLastWeight"></Label-->
					<Label top = "5" left = "10" class="weightLiftedText" color="F6F6F6"> Average Weight Lifted:</Label>
					<ImageView top="5" left = "10" image="Progress.png"></ImageView>
					<View id="upperBodyLinks" layout="horizontal" height="SIZE" top="5">
						<Button top="5" left="10" title="Start Workout" onClick="showUpperBodyWorkout"></Button>
						<Button top="5" left="20" title="See all Exercises" onClick="showUpperBodyExercises"></Button>
					</View>
				</View>
				<View id="lowerBodyView" layout="vertical" height="SIZE" top="0" backgroundColor="#2B2B2B" borderWidth="2" borderColor="#F6F6F6">
					<Label top="10" left = "10" class="workoutName" color="F6F6F6">Lower Body:</Label>
					<Label top = "5" left = "10" class="weightLiftedText" color="F6F6F6"> Average Weight Lifted:</Label>
					<!--Label top="5" left = "10" id="lowerFirstWeight"></Label>
					<Label top="5" left = "10" id="lowerLastWeight"></Label-->
					<ImageView top="5" left = "10" image="Progress.png"></ImageView>
					<!--ProgressBar id="pb" top="10" width="250" height="auto" min="0" max="10" value="5" color="#fff" message="Downloading 0 of 10" /-->
					<View id="upperBodyLinks" layout="horizontal" height="SIZE" top="5">
						<Button top="5" left="10"  title="Start Workout" onClick="showLowerBodyWorkout"></Button>
						<Button top="5" left="20"  title="See all Exercises" onClick="showLowerBodyExercises"></Button>
					</View>
				</View>
			</View>		
		</ScrollView>
	</Window>
	</NavigationWindow>
</Alloy>