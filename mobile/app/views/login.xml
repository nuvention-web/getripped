<Alloy>
	<NavigationWindow id="navGroupWin">
	<Window id="loginWin" backgroundColor="#F1F1F1" title="SwoleTrain">
	<ScrollView id="mainView" layout="vertical" scrollingEnabled="true" showVerticalScrollIndicator="true">
		<View id="view1" layout="vertical" top="22%">
			<View id = "topView" layout="vertical" height="SIZE" backgroundColor="#DE1B1B">
				<Label id="loginLabel" top="10" bottom="10" height="SIZE">Sign in to continue </Label>
			</View>
		<View id = "middleView" layout="vertical" height="SIZE" backgroundColor="#2B2B2B">
		<TextField id="txtUsername" class="txtFieldLogin" top="30"  hintText="Email" autocapitalization="false" value="lee@gmail.com"></TextField>
		<TextField id="txtPassword" class="txtFieldLogin" top="10" bottom="30"  passwordMask="true"  hintText="Password" value="1234"></TextField>
		</View>
		<View id = "bottomView" layout="vertical" top="30" backgroundColor="#F1F1F1">
		<Button id="btnSubmit" class="loginBtn" title="Login" top="20" onClick="showWorkout"></Button>
		</View>
		</View>
	</ScrollView>
	</Window>
	 </NavigationWindow>
</Alloy>